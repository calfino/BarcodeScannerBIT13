<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/serialLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/serialBarcodeResult"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Serial Number"/>

            <Button
                android:id="@+id/scanSerialBarcodeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="scanSerialBarcodeOnClick"
                android:text="Scan" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/modelLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serialLayout">

            <EditText
                android:id="@+id/modelBarcodeResult"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Model Number"/>

            <Button
                android:id="@+id/scanModelBarcodeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="scanModelBarcodeOnClick"
                android:text="Scan" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wlanLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/modelLayout">

            <EditText
                android:id="@+id/wlanBarcodeResult"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="WLAN Number"/>

            <Button
                android:id="@+id/scanWlanBarcodeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="scanWlanBarcodeOnClick"
                android:text="Scan" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>