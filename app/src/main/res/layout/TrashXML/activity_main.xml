<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_add_a_photo_black_24dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/serialLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/serialBarcodeResult"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Serial Number"/>

            <Button
                android:id="@+id/scanSerialBarcodeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="scanSerialBarcodeOnClick"
                android:text="Scan" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/modelLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serialLayout">

            <EditText
                android:id="@+id/modelBarcodeResult"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Model Number"/>

            <Button
                android:id="@+id/scanModelBarcodeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="scanModelBarcodeOnClick"
                android:text="Scan" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wlanLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/modelLayout">

            <EditText
                android:id="@+id/wlanBarcodeResult"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="WLAN Number"/>

            <Button
                android:id="@+id/scanWlanBarcodeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="scanWlanBarcodeOnClick"
                android:text="Scan" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>